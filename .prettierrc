{
  "useTabs": false,
  "printWidth": 60,
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json" }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.js",
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    }
  ]
}
